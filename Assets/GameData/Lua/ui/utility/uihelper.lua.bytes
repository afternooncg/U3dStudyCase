UIHelper.GetServerStatusColor = function(status)
	local retColor = Color.white;
	if status == GameConfig.ServerStatus.UnOpend then
		retColor = Color.white;
	elseif status == GameConfig.ServerStatus.Maintenance then
		retColor = Color.gray;
	elseif status == GameConfig.ServerStatus.Normal then
		retColor = Color.green;
	elseif status == GameConfig.ServerStatus.Busy then
		retColor = Color.yellow;
	elseif status == GameConfig.ServerStatus.Glamor then
		retColor = Color.red;
	end
	return retColor;
end

