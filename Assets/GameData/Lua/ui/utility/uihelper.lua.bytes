UIHelper.GetQualityColor = function(qualityLv)
	local colors = {
			Color(1,1,1,1),
			Color(1,1,1,1),
			Color(0.09,1,0,1),
			Color(0.09,1,0,1),
			Color(0.05,0.7,1,1),
			Color(0.05,0.7,1,1),
			Color(0.05,0.7,1,1),
			Color(0.97,0.13,0.98,1),
			Color(0.97,0.13,0.98,1),
			Color(0.97,0.13,0.98,1),
			Color(0.97,0.13,0.98,1),
			Color(0.98,0.63,0,1),
			Color(0.98,0.63,0,1),
			Color(0.98,0.63,0,1),
			Color(0.98,0.63,0,1),
			Color(0.98,0.63,0,1)
		};
	if qualityLv < 0 or qualityLv >=#colors then 
		return ""
	else
		return colors[qualityLv+1] ;
	end		
end	

